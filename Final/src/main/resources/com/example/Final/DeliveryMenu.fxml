<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../../../DeliveryTheme.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Final.DeliveryMenuController">
   <children>
      <Label fx:id="DeliveryMenu" alignment="CENTER" layoutX="200.0" layoutY="30.0" prefHeight="100.0" prefWidth="400.0" text="Delivery Menu">
         <font>
            <Font name="Cambria Bold Italic" size="12.0" />
         </font>
      </Label>
      <VBox layoutX="280.0" layoutY="146.0" prefHeight="440.0" prefWidth="240.0" spacing="10.0">
         <children>
            <Button fx:id="showPath" mnemonicParsing="false" onAction="#showPath" prefHeight="80.0" prefWidth="240.0" text="show path" />
            <Button fx:id="showTime" mnemonicParsing="false" onAction="#showTime" prefHeight="80.0" prefWidth="240.0" text="show time" />
            <Button fx:id="showDestination" mnemonicParsing="false" onAction="#showDestination" prefHeight="80.0" prefWidth="240.0" text="show destination" />
            <Button fx:id="showLocation" mnemonicParsing="false" onAction="#showLocation" prefHeight="80.0" prefWidth="240.0" text="show location" />
            <Button fx:id="showRestaurant" mnemonicParsing="false" onAction="#showRestaurant" prefHeight="80.0" prefWidth="240.0" text="show restaurant" />
         </children>
      </VBox>
      <Button fx:id="backToDeliveryMenu" mnemonicParsing="false" onAction="#backToDeliveryMenu" text="←" visible="false" />
      <VBox layoutX="740.0" prefHeight="270.0" prefWidth="60.0" spacing="10.0">
         <children>
            <Button fx:id="DeliveryMenuOptions" mnemonicParsing="false" onAction="#showOptions" text="⁝" />
            <Button fx:id="DeliveryMenuLogout" mnemonicParsing="false" onAction="#logout" text="logout" visible="false" />
            <Button fx:id="DeliveryMenuCharge" mnemonicParsing="false" onAction="#chargeBalance" text="charge" visible="false" />
            <Button fx:id="DeliveryMenuShowBalance" mnemonicParsing="false" onAction="#showBalance" text="balance" visible="false" />
         </children>
      </VBox>
   </children>
</AnchorPane>
