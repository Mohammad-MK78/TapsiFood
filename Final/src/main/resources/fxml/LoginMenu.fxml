<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/LoginTheme.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Final.FXMLController.FXLoginMenuController">
   <children>
      <Label fx:id="loginMenu" alignment="CENTER" layoutX="250.0" layoutY="30.0" prefHeight="100.0" prefWidth="300.0" text="Login Menu" textFill="#fff696" />
      <Button fx:id="loginMenuExit" layoutX="740.0" mnemonicParsing="false" onAction="#exit" text="exit" />
      <Button fx:id="login" layoutX="355.0" layoutY="501.0" mnemonicParsing="false" onAction="#loginComplete" text="login" />
      <Button fx:id="backToMainMenu" mnemonicParsing="false" onAction="#goBackToMainMenu" text="←" />
      <HBox layoutX="150.0" layoutY="175.0" onMouseEntered="#showPassword" prefHeight="300.0" prefWidth="500.0">
         <children>
            <VBox prefHeight="190.0" prefWidth="250.0" spacing="6.33">
               <children>
                  <Label fx:id="usernameLabel" alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="250.0" text="Username:   " />
                  <Label alignment="CENTER" prefHeight="20.0" prefWidth="250.0" />
                  <Label fx:id="passwordLabel" alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="250.0" text="Password:   " />
                  <Hyperlink fx:id="forgotPassword" alignment="CENTER_RIGHT" onAction="#showSecurityQuestionForForgottenPassword" prefHeight="20.0" prefWidth="250.0" text="forgot your password? bk     " />
                  <Label fx:id="securityLabel" alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="250.0" text="your elementary school:   " visible="false" />
                  <Label alignment="CENTER" prefHeight="20.0" prefWidth="250.0" />
                  <Label fx:id="yourPassword" alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="250.0" text="Your Password:   " visible="false" />
               </children>
            </VBox>
            <VBox prefHeight="170.0" prefWidth="250.0" spacing="6.33">
               <children>
                  <TextField fx:id="username" prefHeight="50.0" prefWidth="200.0" />
                  <Label fx:id="notAppropriateUsername" alignment="CENTER" prefHeight="20.0" prefWidth="250.0" visible="false" />
                  <PasswordField fx:id="password" onKeyPressed="#loginWithEnterKey" prefHeight="50.0" prefWidth="200.0" />
                  <Label fx:id="notAppropriatePassword" alignment="CENTER" prefHeight="20.0" prefWidth="250.0" text="wrong password!!!" visible="false" />
                  <TextField fx:id="securityQuestion" onKeyPressed="#showPasswordWithEnter" prefHeight="50.0" prefWidth="200.0" visible="false" />
                  <Label fx:id="wrongSecurityQuestion" alignment="CENTER" prefHeight="20.0" prefWidth="250.0" text="vaghean koskholi" visible="false" />
                  <Label fx:id="recoverPassword" alignment="CENTER" prefHeight="50.0" prefWidth="250.0" text="farzan2831" visible="false" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
