<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/ManagerMenu.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Final.FXMLController.FXManagerMenuController">
   <children>
      <Label fx:id="ManageMenu" alignment="CENTER" layoutX="200.0" layoutY="30.0" prefHeight="100.0" prefWidth="400.0" text="Manager Menu">
         <font>
            <Font name="Cambria Bold Italic" size="12.0" />
         </font>
      </Label>
      <Button fx:id="ManagerMenuOptions" layoutX="740.0" mnemonicParsing="false" onAction="#showOptions" text="⁝" />
      <Button fx:id="ManagerMenuLogout" layoutX="540.0" layoutY="66.0" mnemonicParsing="false" onAction="#logout" text="logout" visible="false" />
      <Button fx:id="ManagerMenuCharge" layoutX="540.0" layoutY="133.0" mnemonicParsing="false" text="charge" visible="false" />
      <Button fx:id="ManagerMenuShowBalance" layoutX="540.0" layoutY="200.0" mnemonicParsing="false" text="balance" visible="false" />
      <Button fx:id="backToManagerMenu" mnemonicParsing="false" onAction="#goBackToManagerMenu" text="←" visible="false" />
      <TableView fx:id="myRestaurants" layoutX="100.0" layoutY="131.0" prefHeight="400.0" prefWidth="400.0" visible="false">
        <columns>
          <TableColumn fx:id="myRestaurantName" prefWidth="100.0" text="name" />
          <TableColumn fx:id="myRestaurantType" prefWidth="100.0" text="type" />
            <TableColumn fx:id="myRestaurantLocation" prefWidth="100.0" text="location " />
            <TableColumn fx:id="myRestaurantRating" prefWidth="100.0" text="rating" />
        </columns>
      </TableView>
      <AnchorPane fx:id="RestaurantPane" layoutX="60.0" layoutY="181.0" prefHeight="350.0" prefWidth="500.0" visible="false">
         <children>
            <Label fx:id="restaurantNameLabel" alignment="CENTER" layoutX="41.0" layoutY="57.0" prefHeight="40.0" prefWidth="200.0" text="restaurant name :" />
            <TextField fx:id="restaurantName" layoutX="261.0" layoutY="52.0" prefHeight="50.0" prefWidth="200.0" />
            <Label fx:id="restaurantTypeLabel" alignment="CENTER" layoutX="41.0" layoutY="131.0" prefHeight="40.0" prefWidth="200.0" text="restaurant type :" />
            <TextField fx:id="restaurantType" layoutX="261.0" layoutY="126.0" prefHeight="50.0" prefWidth="200.0" />
            <Label fx:id="restaurantLocationLabel" alignment="CENTER" layoutX="41.0" layoutY="205.0" prefHeight="40.0" prefWidth="200.0" text="restaurant location :" />
            <TextField fx:id="restaurantLocation" layoutX="261.0" layoutY="200.0" prefHeight="50.0" prefWidth="200.0" />
            <Button fx:id="addNewRestaurant" layoutX="211.0" layoutY="276.0" mnemonicParsing="false" text="add" />
         </children>
      </AnchorPane>
      <TableView fx:id="myRestaurantsPrime" layoutX="100.0" layoutY="140.0" prefHeight="400.0" prefWidth="400.0" visible="false">
         <columns>
            <TableColumn fx:id="myRestaurantName1" prefWidth="100.0" text="name" />
            <TableColumn fx:id="myRestaurantType1" prefWidth="100.0" text="type" />
            <TableColumn fx:id="myRestaurantLocation1" prefWidth="100.0" text="location " />
            <TableColumn fx:id="myRestaurantRating1" prefWidth="100.0" text="rating" />
         </columns>
      </TableView>
      <VBox layoutX="280.0" layoutY="216.0" prefHeight="280.0" prefWidth="240.0" spacing="20.0">
         <children>
            <Button fx:id="showRestaurants" mnemonicParsing="false" onAction="#showRestaurants" prefHeight="80.0" prefWidth="240.0" text="show restaurants" />
            <Button fx:id="addRestaurant" mnemonicParsing="false" onAction="#addRestaurant" prefHeight="80.0" prefWidth="240.0" text="add restaurant" />
            <Button fx:id="removeRestaurant" mnemonicParsing="false" onAction="#removeRestaurant" prefHeight="80.0" prefWidth="240.0" text="remove restaurant" />
         </children>
      </VBox>
   </children>
</AnchorPane>
