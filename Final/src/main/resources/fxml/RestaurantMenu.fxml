<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/RestaurantTheme.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Final.FXMLController.FXRestaurantMenuController">
   <children>
      <Label fx:id="restaurantName" alignment="CENTER" layoutX="200.0" layoutY="21.0" prefHeight="100.0" prefWidth="400.0" text="Restaurant Name" textFill="#ff0070" />
      <Button fx:id="backToManagerMenu" mnemonicParsing="false" onAction="#goBackToManagerMenu" prefHeight="60.0" prefWidth="60.0" text="←" />
      <Button fx:id="backToSelectMenu" mnemonicParsing="false" onAction="#goBackToSelectMenu" prefHeight="60.0" prefWidth="60.0" text="←" visible="false" />
      <VBox fx:id="selectMenuVBox" layoutX="280.0" layoutY="174.0" prefHeight="360.0" prefWidth="240.0" spacing="20.0">
         <children>
            <Button fx:id="addFoodMenu" mnemonicParsing="false" onAction="#addFood" prefHeight="80.0" prefWidth="240.0" text="add food" />
            <Button fx:id="removeFoodMenu" mnemonicParsing="false" onAction="#removeFood" prefHeight="80.0" prefWidth="240.0" text="remove food" />
            <Button fx:id="orderHistoryMenu" mnemonicParsing="false" onAction="#showOrderHistory" prefHeight="80.0" prefWidth="240.0" text="order history" />
            <Button fx:id="ongoingOrdersMenu" mnemonicParsing="false" onAction="#showOngoingOrders" prefHeight="80.0" prefWidth="240.0" text="ongoing orders" />
            <Button fx:id="commentMenu" mnemonicParsing="false" onAction="#showComments" prefHeight="80.0" prefWidth="240.0" text="comments" />
         </children>
      </VBox>
      <HBox fx:id="optionsHBox" layoutX="620.0" prefHeight="400.0" prefWidth="180.0" spacing="20.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
               <children>
                  <Label fx:id="changeTypeStatus" alignment="CENTER" prefHeight="20.0" prefWidth="100.0" textFill="RED" visible="false" />
                  <TextField fx:id="changeTypeTextField" alignment="CENTER" onKeyPressed="#changeType" prefHeight="60.0" prefWidth="100.0" visible="false" />
                  <Label fx:id="showBalanceLabel" alignment="CENTER" prefHeight="60.0" prefWidth="100.0" text="\$" visible="false" />
                  <Label fx:id="showTypeLabel" alignment="CENTER" prefHeight="60.0" prefWidth="100.0" visible="false" />
               </children>
               <padding>
                  <Insets top="40.0" />
               </padding>
            </VBox>
            <VBox fx:id="optionsVBox" prefHeight="270.0" prefWidth="60.0" spacing="10.0">
               <children>
                  <Button fx:id="RestaurantMenuOptions" mnemonicParsing="false" onAction="#showOptions" text="⁝" />
                  <Button fx:id="RestaurantMenuChangeType" mnemonicParsing="false" onAction="#showChangeType" text="change" visible="false" />
                  <Button fx:id="RestaurantMenuShowBalance" mnemonicParsing="false" onAction="#showBalance" text="balance" visible="false" />
                  <Button fx:id="RestaurantMenuShowType" mnemonicParsing="false" onAction="#showType" text="type" visible="false" />
               </children>
            </VBox>
         </children>
      </HBox>
      <VBox fx:id="addFoodVBox" alignment="CENTER" layoutX="200.0" layoutY="193.0" prefHeight="320.0" prefWidth="400.0" spacing="10.0" visible="false">
         <children>
            <HBox prefHeight="200.0" prefWidth="400.0">
               <children>
                  <VBox prefHeight="300.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <Label fx:id="foodNameLabel" alignment="CENTER" prefHeight="50.0" prefWidth="200.0" text="food name:" />
                        <Label fx:id="foodCategoryLabel" alignment="CENTER" prefHeight="50.0" prefWidth="200.0" text="food category:" />
                        <Label fx:id="foodCostLabel" alignment="CENTER" prefHeight="50.0" prefWidth="200.0" text="food cost:" />
                        <Label fx:id="foodPriceLabel" alignment="CENTER" prefHeight="50.0" prefWidth="200.0" text="food price:" />
                     </children>
                  </VBox>
                  <VBox prefHeight="300.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <TextField fx:id="foodName" prefHeight="50.0" prefWidth="200.0" />
                        <TextField fx:id="foodCategory" prefHeight="50.0" prefWidth="200.0" />
                        <TextField fx:id="foodCost" prefHeight="50.0" prefWidth="200.0" />
                        <TextField fx:id="foodPrice" prefHeight="50.0" prefWidth="200.0" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Button fx:id="addNewFood" mnemonicParsing="false" onAction="#addFoodCompleted" text="add" />
         </children>
      </VBox>
      <VBox fx:id="removeFoodVBox" alignment="CENTER" layoutX="200.0" layoutY="230.0" prefHeight="200.0" prefWidth="400.0" spacing="10.0" visible="false">
         <children>
            <HBox prefHeight="100.0" prefWidth="400.0" spacing="10.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <Label fx:id="foodNameLabel2" alignment="CENTER" prefHeight="60.0" prefWidth="200.0" text="restaurant name :" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <TextField fx:id="foodName2" prefHeight="60.0" prefWidth="200.0" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Button fx:id="removeFoodDone" mnemonicParsing="false" onAction="#removeFoodCompleted" text="remove" />
         </children>
      </VBox>
      <TableView fx:id="orderHistoryTableView" layoutX="200.0" layoutY="154.0" prefHeight="400.0" prefWidth="400.0" visible="false" />
      <TableView fx:id="ongoingOrdersTableView" layoutX="200.0" layoutY="153.0" prefHeight="400.0" prefWidth="400.0" visible="false" />
      <TableView fx:id="commentsTableView" layoutX="200.0" layoutY="153.0" prefHeight="400.0" prefWidth="400.0" visible="false" />
      <VBox fx:id="replyVBox" alignment="CENTER" layoutX="200.0" layoutY="203.0" prefHeight="300.0" prefWidth="400.0" spacing="10.0" visible="false">
         <children>
            <Button fx:id="backToCommentsTableView" mnemonicParsing="false" onAction="#goBackToCommentsTableView" prefHeight="60.0" prefWidth="60.0" text="←" />
            <Label fx:id="replyLabel" alignment="CENTER" prefHeight="60.0" prefWidth="400.0" text="your reply:" />
            <TextField fx:id="reply" prefHeight="60.0" prefWidth="200.0" />
            <Button fx:id="addReply" mnemonicParsing="false" onAction="#submitReply" prefHeight="60.0" prefWidth="60.0" text="submit" />
         </children>
      </VBox>
   </children>
</AnchorPane>
